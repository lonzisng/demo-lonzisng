/* pages/order/order.wxss */
page{
    background: #f2f2f2;
}
.store_img_bj{
width:100%;
height: 40%;
filter:blur(5px);
-webkit-filter:blur(5px);
z-index: -1;
position:absolute;
}
.qbdd {
  background: #fff;
  width: 92%;
  font-size: 12px;
  color: #666;
  padding: 4%;
  border-bottom: 1px solid #eee;
}
.store_icon {
  float: right;
  width:40rpx; 
  height: 40rpx;
}
.order>view{
    position: relative;
    background-color: #fff;
    margin: 2vw 3vw;
    padding:3vw;
    width: 88vw;
    border-radius: 10rpx;
    box-shadow:  0 2rpx 5rpx #ccc;
    font-size: 28rpx;
    line-height: 60rpx;
}
.order image{
    width: 40rpx;
    height:40rpx;
    vertical-align: middle;
    margin-right:16rpx;
}

.roomType {
    width: 80%;
    height:60rpx;
    line-height: 60rpx;
}
.food,.msg{
    margin-left: 8vw;
}
.food view{
    border-bottom: 1rpx solid #f1f1f1;
    color: #797979;
}
.msg{
    color: #797979;
}
.food text{
    float: right;
}

.right{
    position: absolute;
    right: 3vw;
    bottom: 3vw;
    color:#a1a1a1;
}
.price{
    color: #f73c49;
}
.tips{
    position: absolute;
    right: 0;
    top:3vw;
    width: 12vw;
    height: 48rpx;
    line-height: 48rpx;
    padding:4rpx 8rpx;
    padding-left:32rpx;
    border-right: 2rpx solid #f73c49;
    color:#f73c49;
}