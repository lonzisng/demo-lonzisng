/* pages/login/login.wxss */
page{
    background: #f2f2f2;
}
swiper{
    width: 750rpx;
    height: 100vh;
}
swiper-item{
    width: 750rpx;
    height: 100vh;
    display: block;
}
swiper-item image{
    width: 100%;
    height: 100%;
}

.title{
    position: absolute;
    top:70rpx;
    left: 50%;
    margin-left: -177rpx;
    width: 354rpx;
    height: 260rpx;
    font-size:60rpx;
    text-align:center;
}
.title image{
    width: 100%;
    height: 100%;
}
.avatar{
    position: absolute;
    top: 400rpx;
    left: 0;
    right: 0;
    margin: 0 auto;
    width: 120rpx;
    height: 120rpx;
    border-radius: 60rpx;
    overflow: hidden;
}
.tips{
    position: absolute;
    left: 0;
    right: 0;
    bottom: 300rpx;
    margin: 0 auto;
    padding: 8rpx 16rpx;
    width: 500rpx;
    text-align: center;
    color: #f1f1f1;
    font-size: 24rpx;
}
.userinfo{
    position: absolute;
    bottom: 180rpx;
    height: 76rpx;
}
.userinfo button{
    height: 76rpx;
    line-height: 60rpx;
    padding: 8rpx 60rpx;
    margin: 0;
}
