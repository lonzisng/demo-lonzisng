/* pages/book/book.wxss */
@import "../user/user.wxss";
page{
  background: #f2f2f2
}
swiper {
  width: 750rpx;
  height: 400rpx;
}
swiper-item{
  width: 750rpx;
  height: 400rpx;
  display: block;
}
swiper-item image{
  width: 100%;
  height: 100%;
}

.top {
  width: 100vw;
  height:400rpx;
  margin-bottom:90rpx;
}

.char {
  position: absolute;
  top:320rpx;
  left: 0;
  right: 0;
  background-color: rgba(255,255,255,.99);
  width: 90%;
  border-radius: 10rpx;
  margin: 0 auto;
}

.centent {
  padding: 25rpx;
}

.text_2 {
  margin-top: 10rpx;
  font-size: 28rpx;
  color: #333;
}
.content{
    margin-bottom: 100rpx;
}
.description{
    width: 92vw;
    padding: 4vw;
    font-size: 24rpx;
    line-height:60rpx;
    color: #797979;
    background-color: #fff;
    margin-top:100rpx;
    margin-bottom: 16rpx;
}
.message{
    width: 94vw;
    height: 60rpx;
    padding: 2vw 4vw;
    font-size: 28rpx;
    line-height:60rpx;
    background-color: #fff;
    display: flex;
    flex-wrap: wrap;
}
.message.time{
    height: 120rpx;
}
.message text{
    width:12vw;
    height: 60rpx;
    line-height: 60rpx;
}
.message input{
    width: 76vw;
    height: 60rpx;
    display: inline-block;
}
.message view{
    width: 94vw;
    display: block;
}
/* checkbox未选中时样式 */
checkbox .wx-checkbox-input{
    border-radius: 3rpx;  
    height: 26rpx;  
    width: 26rpx;  
    margin-top: -4rpx;
}
/* checkbox选中时样式 */
checkbox .wx-checkbox-input.wx-checkbox-input-checked{
    border: 1rpx solid #f73c49;
}
/* 底部 */
.bottom{
    display: flex;
    justify-content: space-between;
    position: fixed;
    bottom: 0;
    width: 92vw;
    height: 70rpx;
    padding: 2vw 4vw;
    box-shadow: 0 0 5rpx #ccc;
    background-color: #fff;
    line-height: 70rpx;
}
.price{
    font-size: 32rpx;
    color: #f73c49;
}
.btn{
    font-size: 32rpx;
    background-color: #f73c49;
    color: #fff;
    padding: 8rpx 16rpx;
    height: 50rpx;
    line-height: 50rpx;
}