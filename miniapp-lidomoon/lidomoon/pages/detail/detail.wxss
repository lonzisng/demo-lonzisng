/* pages/detail/detail.wxss */
page{
    background: #f2f2f2;
}
swiper {
    width: 750rpx;
    height: 400rpx;
}
swiper-item{
    width: 750rpx;
    height: 400rpx;
    display: block;
}
swiper-item image{
    width: 100%;
    height: 100%;
}
.detail{
    position: absolute;
    top: 234rpx;
    padding: 0 4vw;
    font-size: 28rpx;
    line-height: 56rpx;
    background-color: rgba(0,0,0,.5);
    color: #fff;
    text-align: center;
}
.logo{
    width: 200rpx;
    height: 140rpx;
    margin: 0 auto;
    font-size:60rpx;
    text-align:center;
}
.logo image{
    width: 100%;
    height: 100%;
}


.facility{
    margin: 1vw 4vw;
    width: 90vw;
    height: 60rpx;
    line-height: 60rpx;
    padding: 1vw;
    font-size: 24rpx;
    background-color: #fff;
    border-radius: 10rpx;
}
.facility image{
    width: 50rpx;
    height: 50rpx;
    vertical-align: middle;
    margin-right: 16rpx;
}
.servers{
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    margin: 1vw 4vw;
    padding:2vw 1vw;
    width: 90vw;
    font-size: 24rpx;
    background-color: #fff;
    margin-bottom:60rpx;
    border-radius: 10rpx;
}
.servers>view{
    width: 20vw;
    text-align: center;
    margin: 16rpx 0;
}
.servers image{
    width: 50rpx;
    height: 50rpx;
    vertical-align: middle;
}