/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.page_row{
   display: flex;  
   flex-direction: row;
}
.userinfo {
  position: relative;
  width: 750rpx;
  height: 400rpx;
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo button{
  font-size: 32rpx;
  margin-top: 140rpx;
  background-color: #f73c49;
  color: #fff;
}

.userinfo-avatar {
  display: block;
  width: 160rpx;
  height: 160rpx;
  margin: 20rpx;
  margin-top: 100rpx;
  border-radius: 50%;
  border: 2px solid #fff;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}

.userinfo text {
  /* color: #fff; */
  font-size: 14px;
  background-color: #c0c0c0;
  border-radius:10rpx;
  padding: 0 10rpx 0 10rpx;
}